{
  "name": "@sclable/nestjs-libs",
  "license": "MIT",
  "scripts": {
    "prepare": "tsc && ./dist.js && husky install",
    "lint": "eslint . --ext .js,.ts,.tsx --max-warnings 0 --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "lintfix": "npm run lint -- --fix",
    "test": "jest",
    "clean": "rimraf packages/*/node_modules; npx rimraf node_modules",
    "clean:dist": "rimraf packages/*/dist; npx rimraf dist"
  },
  "author": {
    "name": "Sclable Business Solutions GmbH",
    "email": "office@sclable.com",
    "url": "https://sclable.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sclable/nestjs-libs.git"
  },
  "engines": {
    "node": "^12.18.0 || ^14.5.0 || ^16.12.0",
    "npm": "^8.1.0"
  },
  "dependencies": {
    "@sclable/nestjs-async-provider": "file:packages/async-provider",
    "@sclable/nestjs-auth": "file:packages/auth",
    "@sclable/nestjs-es-cqrs": "file:packages/es-cqrs",
    "@sclable/nestjs-queue": "file:packages/queue",
    "@sclable/nestjs-storage": "file:packages/storage"
  },
  "devDependencies": {
    "@azure/abort-controller": "1.0.4",
    "@azure/service-bus": "1.1.10",
    "@azure/storage-blob": "12.1.1",
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@commitlint/prompt-cli": "14.1.0",
    "@nestjs/common": "8.2.0",
    "@nestjs/core": "8.2.0",
    "@nestjs/jwt": "8.0.0",
    "@nestjs/passport": "8.0.1",
    "@nestjs/platform-express": "8.2.0",
    "@nestjs/testing": "8.2.0",
    "@sclable/lint": "1.7.0",
    "@sclable/tsconfig": "0.11.18",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.0.2",
    "@types/minio": "7.0.11",
    "@types/node": "16.11.7",
    "@types/passport-jwt": "3.0.5",
    "@types/passport-local": "1.0.34",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.1",
    "amqp-ts": "1.8.0",
    "glob": "7.2.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "minio": "7.0.19",
    "rimraf": "3.0.2",
    "rxjs": "7.4.0",
    "shelljs": "0.8.4",
    "supertest": "6.1.6",
    "ts-jest": "27.0.7",
    "typescript": "4.4.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix --max-warnings 0 --cache --cache-location 'node_modules/.cache/.eslintcache'"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": ".*/test/.*\\.spec\\.ts$"
  }
}
